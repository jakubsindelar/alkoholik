<h1>Listing payments</h1>

<table id= "pubs" class="table table-hover" style="background-color:maroon; max-width:60%; color:white">
  <thead>
    <tr>
      <th>User</th>
      <th>Pub</th>
      <th>Item</th>
      <th>Amount</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= "#{payment.user.name} #{payment.user.surname}" %></td>
        <td><%= "#{payment.pub.name}" if payment.pub.present? %></td>
        <td><%= payment.item %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.date %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

