<h1>Listing payments</h1>

<table id= "pubs" class="table table-hover" style="background-color:maroon; max-width:60%; color:white">
  <thead>
    <tr>
      <th>Uživatel</th>
      <th>Hospoda</th>
      <th>Věc</th>
      <th>Cena</th>
      <th>Datum</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr class="testovacka">
        <td><%= "#{payment.user.name} #{payment.user.surname}" if payment.user.present? %></td>
        <td><%= "#{payment.pub.name}" if payment.pub.present? %></td>
        <td><%= payment.item %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.date %></td>
        <td><%= link_to 'Zobrazit', payment %></td>
        <td><%= link_to 'Editovat', edit_payment_path(payment) %></td>
        <td><%= link_to 'Smazat', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Přidat účet', new_payment_path %>
